{
  "name": "react-base-project",
  "version": "1.0.0",
  "description": "A base structure for a React project, using webpack and babel",
  "main": "index.js",
  "repository": "https://github.com/fabioctetsuo/react-base-project",
  "author": "@fabioctetsuo",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "webpack-dev-server --open --mode development",
    "build": "webpack --mode production",
    "lint": "eslint --ignore-path .gitignore",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|json)\"",
    "format": "yarn run prettier --write",
    "check-format": "yarn run prettier --list-different",
    "validate": "yarn run check-format && yarn run lint && yarn run build"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "babel-loader": "^8.1.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.0",
    "prettier": "^2.0.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
